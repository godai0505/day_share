.col-md-6.mx-auto
  %h2.py-2.text-center
    Sign_up
  %hr
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field.mb-3
      = f.label :name
      = f.text_field :name, autofocus: true, class: "form-control", placeholder: "your name"
    .field.mb-3
      = f.label :email
      = f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "you@example.com"
    .field.mb-3
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", class: "form-control"
    .field.mb-3
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
    %hr
    .actions.text-center.mb-3
      = f.submit "Sign up", class: "btn btn-primary btn-lg btn-block"
  = render "devise/shared/links"
