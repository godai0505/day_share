.col-md-6.mx-auto
  %h2.py-2.text-center
    Edit #{resource_name.to_s.humanize}
  %hr
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .field.mb-3
      = f.label :name
      =# f.text_field :name, class: "form-control", placeholder: "your name"
    .field.mb-3
      = f.label :email
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com"
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .field.mb-3
      = f.label :current_password
      %i (we need your current password to confirm your changes)
      = f.password_field :current_password, autocomplete: "off", class:"form-control"
    .field.mb-3
      = f.label :password
      %i (leave blank if you don't want to change it)
      - if @minimum_password_length
        %em
          = "(#{@minimum_password_length} characters minimum)"
      = f.password_field :password, autocomplete: "off", class: "form-control"
    .field.mb-3
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
    %hr
    .actions.text-center.mb-3
      = f.submit "Update", class: "btn btn-primary btn-lg btn-block"
      = link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"text-center"
