!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SociaB
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload' do
      = javascript_pack_tag 'application'
      = stylesheet_pack_tag 'application'
  %body
    %nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      = link_to "SociaB", "/", class: "navbar-brand"
      %button.navbar-toggler.navbar-toggler-right{:type => "button", :data => {:toggle => 'collapse', :target => '#navbarNav'}, :aria => {:controls => 'navbarNav', :expanded => 'false', :label => 'Toggle navigation'}}
        %span.navbar-toggler-icon
      %div.napse.navbar-collapse#navbarNav
        %ul.navbar-nav.mr-auto
          %li.nav-item.active
            %a.nav-link
              Home
              %span.sr-only (current)
          %li.nav-item
          %li.nav-item
            %a.nav-link.disabled Princing
        - if user_signed_in?
          .form-inline.my-2.my-lg-0
            = link_to "Sign_out", users_sign_out_path, class: "btn btn-outline-delete my-2 my-sm-0"
            = link_to "Edit" , edit_user_registration_path, class: "btn btn-outline-success my-2 my-sm-0"
        - else
          .form-inline.my-2.my-lg-0
            = link_to "Sign_up" , new_user_registration_path, class: "btn btn-outline-success my-2 my-sm-0"
            = link_to "Sign_in", new_user_session_path, class: "btn btn-outline-success my-2 my-sm-0"
    %main
      .jumbotron
        #content_view
          = yield
